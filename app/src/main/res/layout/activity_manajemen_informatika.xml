<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManajemenInformatika">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="manajemen Informatika"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FF8C00"
            android:textSize="27dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Deskripsi dan Profil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Studi Manajemen Informatika(Kampus Kab.Pelalawan) merupakan salah satu Program Studi Diluar Kampus Utama(PSDKU) Politeknik Negeri Padang yang memiliki sejarah dan keterkaitan erat dengan berdirinya Akademi Komonitas  didaerah Pelalawan.Berangkat SK pendirian Akademi Komonitas Nomor:179/P/2013 tanggal 26 september2013,Program Studi Diluar Domisili(PDD) Kabupaten Pelalawan di awal berdirinya memiliki Program Studi D2 Elektro Industri dan D2 Manajemen Informatiak "
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnback"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Back"
            android:textAlignment="center"
            android:background="@drawable/btncustom"
            android:textColor="#FF8C00"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>