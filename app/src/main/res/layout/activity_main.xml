<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/wave"

        >

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="75dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rvbag"
           />

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#FF8C00"

            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="3"
            />

        <TextView
            android:id="@+id/txtalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limau Manih,Padang,Sumbar"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnmi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Manajemen Informatika"
            android:layout_marginTop="25dp"
            android:background="@drawable/btncustom"
            android:textColor="#FF8C00"/>

        <Button
            android:id="@+id/btntk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Teknik Komputer"
            android:layout_marginTop="15dp"
            android:background="@drawable/btncustom"
            android:textColor="#FF8C00
"/>

        <Button
            android:id="@+id/btngaleri"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Galeri Photo"
            android:layout_marginTop="15dp"
            android:background="@drawable/btncustom"
            android:textColor="#FF8C00"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>